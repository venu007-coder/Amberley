/* Slider */
.slider_section .carousel-indicators {
  position: unset;
  margin: 0;
  -webkit-box-pack: center;
  -ms-flex-pack: center;
  justify-content: center;
  -webkit-box-align: center;
  -ms-flex-align: center;
  align-items: center;
}

.slider_section .carousel-indicators li {
  background-color: #1b1b1b;
  width: 16px;
  height: 5px;
  border-radius: 30%;
  opacity: 1;
  margin: 10px 5px;
  list-style: none;

}

.slider_section .carousel-indicators li.active {
  width: 30px;
  height: 5px;
  background-color: #DAA425;
}

/* Slider */

/* scroll fade animation */

.fade-in-up {
  opacity: 0;
  transform: translateY(10px);
  transition: opacity 0.5s ease-out, transform 2s ease-out;
}

.fade-in-up.show {
  opacity: 1;
  transform: translateY(0);
}

/* scroll fade animation */

/* scroll slide animation */


.slide-in-left,
.slide-in-right {
  opacity: 0;
  transition: opacity 0.5s ease, transform 2s ease;
}

.slide-in-left {
  transform: translateX(-50px);
}

.slide-in-right {
  transform: translateX(50px);
}

.slide-in-left.show,
.slide-in-right.show {
  opacity: 1;
  transform: translateX(0);
}

/* scroll slide animation */

/* scroll cube animation */

.cube-slide-container {
  perspective: 1000px;
  overflow: hidden;
  display: inline-block;
}

.cube-slide {
  transform: rotateY(90deg);
  /* start hidden, turned right */
  opacity: 0;
  transform-origin: left center;
  transition: transform 2s ease-out, opacity 2s ease-out;
}

.cube-slide.show {
  transform: rotateY(0deg);
  opacity: 1;
}

/* scroll cube animation */

.clip-animate {
  width: 100%;
  overflow: hidden;
  --motion-clip-start: polygon(0% 100%, 100% 100%, 100% 100%, 0% 100%);
  --motion-clip-end: polygon(0% 0%, 100% 0%, 100% 100%, 0% 100%);
}

.clip-animate img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  clip-path: var(--motion-clip-start);
  transition: clip-path 1s ease-in-out;
}

.clip-animate.in-view img {
  clip-path: var(--motion-clip-end);
}